@model Shop.Models.DONDATHANG

@{
    ViewBag.Title = "Edit HoaDon";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Edit HoaDon</h2>

@using (Html.BeginForm("SaveHoaDon", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.Tinhtranggiaohang, htmlAttributes: new { @class = "control-label" })
        <div>
            @Html.DropDownList("TinhTrangGiaoHang", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Tinhtranggiaohang, "", new { @class = "text-danger" })
        </div>
    </div>

    @Html.HiddenFor(model => model.MaDonHang)

    <div class="form-group">
        <div>
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
